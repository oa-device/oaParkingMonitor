# Example Environment Variables for Local Development
# Copy this to .env and customize for your development setup

# Environment Selection
PARKING_MONITOR_ENV=staging

# Service Configuration  
PARKING_MONITOR_PORT=9091
PARKING_MONITOR_LOG_LEVEL=DEBUG

# Detection Configuration
PARKING_MONITOR_MODEL_PATH=models/yolo11m.pt
PARKING_MONITOR_CONFIDENCE=0.4

# Camera Configuration (0 for default camera, or video file path)
PARKING_MONITOR_CAMERA_SOURCE=videos/current.mp4

# Network Configuration (for local development)
TAILSCALE_SUBNET=100.64.0.0/10

# Debug Configuration (enable for development)
PARKING_MONITOR_DEBUG=true

# Site Information (for development)
SITE_NAME="Development Lab"
SITE_LOCATION="Local Development"
DEVICE_ROLE="development"
TARGET_ENV="staging"

# Python Configuration
PYTHONPATH=src